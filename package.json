{
  "name": "whispers-of-the-heart",
  "version": "1.0.0",
  "description": "Whispers of the Heart - A modern blog platform with React frontend and NestJS backend",
  "author": {
    "email": "hao131462@qq.com",
    "name": "EternalHeart",
    "url": "https://github.com/wh131462"
  },
  "private": true,
  "license": "MIT",
  "packageManager": "pnpm@10.15.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "pnpm": {
    "overrides": {
      "react": "^19.1.1",
      "react-dom": "^19.1.1",
      "@types/react": "^19.1.12",
      "@types/react-dom": "^19.1.9"
    }
  },
  "scripts": {
    "dev": "pnpm build:packages && concurrently -n api,web -c blue,green \"pnpm dev:api\" \"wait-on http://localhost:7777/api/v1/health && pnpm dev:web:only\"",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "test": "turbo run test",
    "dev:api": "turbo run dev --filter=api",
    "dev:web": "pnpm build:packages && turbo run dev --filter=web",
    "dev:web:only": "turbo run dev --filter=web",
    "build:api": "turbo run build --filter=api",
    "build:web": "turbo run build --filter=web",
    "build:packages": "turbo run build --filter=packages/*",
    "docker:dev:up": "docker-compose --env-file configs/env.development -f docker-compose.dev.yml up -d",
    "docker:dev:down": "docker-compose --env-file configs/env.development -f docker-compose.dev.yml down",
    "docker:dev:logs": "docker-compose -f docker-compose.dev.yml logs -f",
    "docker:dev:ps": "docker-compose -f docker-compose.dev.yml ps",
    "docker:dev:reset": "docker-compose --env-file configs/env.development -f docker-compose.dev.yml down -v",
    "dev:local": "pnpm docker:dev:up && pnpm dev",
    "dev:local:db": "docker-compose --env-file configs/env.development -f docker-compose.dev.yml up -d postgres minio pgadmin",
    "release": "rm -rf ./release && sh scripts/build-release.sh",
    "prod:build": "docker-compose -f docker-compose.prod.yml build",
    "prod:up": "docker-compose -f docker-compose.prod.yml up -d",
    "prod:down": "docker-compose -f docker-compose.prod.yml down",
    "prod:logs": "docker-compose -f docker-compose.prod.yml logs -f",
    "prod:restart": "docker-compose -f docker-compose.prod.yml restart",
    "deploy:restart": "pnpm prod:build && pnpm prod:restart",
    "db:backup": "scripts/backup-db.sh",
    "db:restore": "scripts/restore-db.sh",
    "db:init": "./scripts/init-db.sh",
    "db:migrate": "./scripts/db-migrate.sh",
    "db:migrate:dev": "./scripts/db-migrate.sh dev",
    "db:migrate:push": "./scripts/db-migrate.sh push",
    "db:migrate:status": "./scripts/db-migrate.sh status",
    "db:generate": "cd apps/api && npx prisma generate",
    "setup": "pnpm install && pnpm db:generate && pnpm build:packages",
    "setup:dev": "pnpm setup && pnpm dev:local:db",
    "reset": "pnpm clean && pnpm install && pnpm db:generate && pnpm build:packages",
    "prepare": "husky"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^22.18.0",
    "concurrently": "^9.2.1",
    "eslint": "^9.34.0",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.6.2",
    "turbo": "^2.0.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.50.0",
    "wait-on": "^9.0.3"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "workspaces": [
    "apps/*",
    "packages/*",
    "infra/*"
  ]
}
