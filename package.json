{
  "name": "whispers-of-the-heart",
  "version": "1.0.0",
  "description": "Whispers of the Heart - A modern blog platform with React frontend and NestJS backend",
  "author": "Your Name",
  "private": true,
  "license": "MIT",
  "packageManager": "pnpm@10.15.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "pnpm": {
    "overrides": {
      "react": "^19.1.1",
      "react-dom": "^19.1.1",
      "@types/react": "^19.1.12",
      "@types/react-dom": "^19.1.9"
    }
  },
  "scripts": {
    "dev": "pnpm build:packages && turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "test": "turbo run test",
    "dev:api": "turbo run dev --filter=api",
    "dev:web": "pnpm build:packages && turbo run dev --filter=web",
    "build:api": "turbo run build --filter=api",
    "build:web": "turbo run build --filter=web",
    "build:ui": "turbo run build --filter=ui",
    "build:types": "turbo run build --filter=types",
    "build:utils": "turbo run build --filter=utils",
    "build:hooks": "turbo run build --filter=hooks",
    "build:packages": "turbo run build --filter=packages/*",
    "start:api": "turbo run start --filter=api",
    "start:web": "turbo run start --filter=web",
    "dev:development": "cross-env NODE_ENV=development turbo run dev",
    "dev:production": "cross-env NODE_ENV=production turbo run dev",
    "build:development": "cross-env NODE_ENV=development turbo run build",
    "build:production": "cross-env NODE_ENV=production turbo run build",
    "docker:dev:up": "docker-compose --env-file configs/env.development -f docker-compose.dev.yml up -d",
    "docker:dev:down": "docker-compose --env-file configs/env.development -f docker-compose.dev.yml down",
    "docker:dev:logs": "docker-compose -f docker-compose.dev.yml logs -f",
    "docker:dev:ps": "docker-compose -f docker-compose.dev.yml ps",
    "docker:dev:reset": "docker-compose --env-file configs/env.development -f docker-compose.dev.yml down -v",
    "dev:local": "pnpm docker:dev:up && pnpm dev",
    "dev:local:db": "docker-compose --env-file configs/env.development -f docker-compose.dev.yml up -d postgres minio pgadmin",
    "dev:local:stop": "pnpm docker:dev:down",
    "dev:local:clean": "pnpm docker:dev:reset",
    "build:all": "pnpm packages:build && pnpm build",
    "build:prod": "pnpm env:prod && pnpm build:all",
    "release": "rm -rf ./release && sh scripts/build-release.sh",
    "prod:build": "docker-compose -f docker-compose.prod.yml build",
    "prod:up": "docker-compose -f docker-compose.prod.yml up -d",
    "prod:down": "docker-compose -f docker-compose.prod.yml down",
    "prod:logs": "docker-compose -f docker-compose.prod.yml logs -f",
    "prod:restart": "docker-compose -f docker-compose.prod.yml restart",
    "deploy": "pnpm build:prod && pnpm prod:build && pnpm prod:up",
    "deploy:restart": "pnpm prod:build && pnpm prod:restart",
    "db:backup": "scripts/backup-db.sh",
    "db:restore": "scripts/restore-db.sh",
    "db:init": "./scripts/init-db.sh",
    "setup": "pnpm install && pnpm db:generate && pnpm packages:build",
    "setup:dev": "pnpm setup && pnpm dev:local:db",
    "reset": "pnpm clean && pnpm install && pnpm db:generate && pnpm packages:build",
    "packages:build": "turbo run build --filter=./packages/*",
    "packages:dev": "turbo run dev --filter=./packages/*",
    "docker:up": "cd infra/docker && docker-compose up -d",
    "docker:down": "cd infra/docker && docker-compose down",
    "docker:build": "cd infra/docker && docker-compose build",
    "docker:logs": "cd infra/docker && docker-compose logs -f",
