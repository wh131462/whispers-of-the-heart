  "devDependencies": {
    "@types/node": "^22.18.0",
    "eslint": "^9.34.0",
    "prettier": "^3.6.2",
    "turbo": "^2.0.0",
    "cross-env": "^10.0.0",
    "typescript": "^5.8.3"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
